class Solution {
    public boolean hasIncreasingSubarrays(List<Integer> nums, int k) {
        
        for(int i=0;i+2*k-1<nums.size();i++){

            if(helper(i, i+k-1, nums) && helper(i+k, i+2*k-1, nums)){
                return true;
            }
        }
        return false;
    }

    public boolean helper(int i, int j, List<Integer> nums){

        for(int k=i;k<j;k++){

            if(nums.get(k)>=nums.get(k+1)){
                return false;
            }
        }
        return true;
    }
}