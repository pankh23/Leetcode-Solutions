/*
class Node {
    int data;
    Node left, right;

    Node(int item) {
        data = item;
        left = right = null;
    }
}
*/

class Solution {
    public Node sortedArrayToBST(int[] arr) {
        // code here
        
        return helper(arr, 0, arr.length-1);
    }
    
    public Node helper(int[] arr, int i, int j){
        
        if(i>j){
            return null;
        }
        int mid=(i+j)/2;
        
        Node root=new Node(arr[mid]);
        
        root.left=helper(arr, i, mid-1);
        root.right=helper(arr, mid+1, j);
        
        return root;
    }
}