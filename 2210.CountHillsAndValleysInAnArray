class Solution {
    public int countHillValley(int[] nums) {
        
        if(nums.length<=2){
            return 0;
        }

        int count=0;

        for(int i=1;i<nums.length-1;i++){

            if(nums[i]==nums[i-1]){
                continue;
            }
            int prev=i-1;

            while(prev>=0 && nums[i]==nums[prev]){
                prev--;
            }

            int next=i+1;

            while(next<nums.length && nums[i]==nums[next]){
                next++;
            }

            if(next<nums.length && prev>=0){

                if(nums[i]>nums[next] && nums[i]>nums[prev]){
                count+=1;
            }
                else if(nums[i]<nums[next] && nums[i]<nums[prev]){
                    count+=1;
                }
            }
        }
        return count;
    }
}