/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    public int ans=0;
    public int max=-1;

    public int findBottomLeftValue(TreeNode root) {

        dfs(root, 0);

        return ans;
    }

    public void dfs(TreeNode root, int h){

        if(root==null){
            return;
        }

        if(max<h){
            max=h;
            ans=root.val;
        }

        dfs(root.left, h+1);
        dfs(root.right, h+1);
    }
}